{
	"name": "flutterwave-universal",
	"version": "1.3.0",
	"description": "Universal TypeScript SDK for Flutterwave payment services, compatible with Node.js, Bun, Deno, Cloudflare Workers and Edge Functions",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "pnpm biome check --write .",
		"test": "vitest",
		"test:unit": "vitest --run test/unit/**/*.test.ts",
		"test:integration": "vitest --run tests/integration/**/*.test.ts",
		"release": "semantic-release"
	},
	"keywords": [
		"flutterwave",
		"payment",
		"sdk",
		"typescript",
		"universal",
		"edge-runtime",
		"cloudflare-workers"
	],
	"author": "Elvis Ndubuisi",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/elvis-ndubuisi/flutterwave_node.git"
	},
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^12.0.1",
		"@types/node": "^22.15.21",
		"lefthook": "^1.11.13",
		"semantic-release": "^24.2.5",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.4"
	}
}
